<?xml version="1.0" encoding="UTF-8"?>
<beans>

    <bean id="helloWorldService" class="myspring.springframework.main.service.HelloWorldServiceImpl" scope="prototype">
        <property name="text" value="Hello World"></property>
    </bean>

    <bean id="wrapService" class="myspring.springframework.main.service.WrapService">
        <property name="helloWorldService" ref="helloWorldService"></property>
    </bean>

    <bean id="agentMethods" class="myspring.springframework.main.service.AgentMethods"></bean>

    <aop-config>
        <aop-aspect ref="agentMethods">
            <aop-pointcut id="say" expression="myspring.springframework.main.service.WrapService.say()"></aop-pointcut>
            <aop-before method="before" pointcut-ref="say"></aop-before>
            <aop-after method="after" pointcut-ref="say"></aop-after>
        </aop-aspect>
    </aop-config>

</beans>